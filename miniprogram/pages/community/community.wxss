/* miniprogram/pages/home/home.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 16rpx 16rpx;
  margin: 0 auto;
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.user-head {
  width: 250rpx;
  height: 200rpx;
  line-height: 300rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.user-name-time {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: 5rpx;
  margin-left: 10rpx;
}

.user-name {
  font-size: 50rpx;
  color: #333;
  font-weight: bold;
}

.user-publish-time {
  font-size: 30rpx;
  color: #999;
}

.content {
  display: flex;
  flex-direction: column;
  margin-right: 0%;
  margin-top: 140rpx;
}

.content-scroll {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.content-text {
  font-size: 50rpx;
  color: #666;
  margin-left: 10rpx;
}

.content-img {
  width: 100%;
  min-height: 100rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  background-color: #999;
}

.line {
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  background-color: #ccc;
  font-size: 16rpx;
  text-align: center;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  z-index: -99;
}

.like-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: fixed;
  bottom: 0;
}

.like-icon {
  width: 48rpx;
  height: 48rpx;
}

.like-text {
  font-size: 50rpx;
  color: rgb(17, 14, 16);
  font-weight: bold;
}
